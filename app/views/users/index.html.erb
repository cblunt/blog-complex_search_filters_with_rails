<h1>Users</h1>

<% form_tag users_path, :method => :get do %>
  <%= text_field_tag "search[terms]", params[:search][:terms] %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Email Address</th>
    <th>Administrator</th>
    <th>Status</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= h [user.first_name, user.last_name].join(' ') %> </td>
      <td><%= h user.email_address %></td>
      <td><%= user.admin? ? 'Yes' : 'No' %></td>
      <td><%= user.status %></td>
    </tr>
  <% end %>
</table>
